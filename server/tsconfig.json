{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "lib": ["ES2022"],
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["../shared/*"]
        }
    },
    "include": ["src/**/*", "../shared/**/*"],
    "exclude": ["node_modules"]
}
