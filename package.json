{
    "name": "riffbit-monorepo",
    "description": "A Multiplatform app for AI generated question prompts.",
    "version": "0.0.1",
    "private": true,
    "author": "leontutu",
    "license": "UNLICENSED",
    "engines": {
        "node": ">=18.0.0"
    },
    "workspaces": [
        "app",
        "server",
        "shared"
    ],
    "scripts": {
        "dev:app": "npm run start --workspace=app",
        "dev:server": "npm run dev --workspace=server",
        "test": "npm run test:app && npm run test:server",
        "test:app": "npm run test --workspace=app",
        "test:server": "npm run test --workspace=server",
        "ngrok": "npx ngrok http 3000",
        "format": "npx prettier --write ."
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^6.0.0",
        "eslint-config-prettier": "^10.1.8",
        "prettier": "^3.6.2"
    }
}
